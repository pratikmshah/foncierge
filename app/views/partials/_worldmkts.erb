<div id="world-markets">
  <p class="h5"><strong>World Markets</strong></p>
  <table class="table table-hover table-condensed">
    <tbody>

      <% google_markets.each do |data| %>
        <% if data.last.include?("-") %>
          <tr>
            <td><%= data[0] %></td>
            <td><%= data[1] %></td>
            <td class="red"><%= data[2] %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= data[0] %></td>
            <td><%= data[1] %></td>
            <td class="green"><%= data[2] %></td>
          </tr>
        <% end %>
      <% end %>

    </tbody>
  </table>
</div>